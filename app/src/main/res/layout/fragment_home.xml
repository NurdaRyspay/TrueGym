<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/main_dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:maskColor="#77000000" />

    <TableLayout
        android:visibility="invisible"
        android:id="@+id/table"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="12dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                style="@style/TextDefault"
                android:text="ID" />

            <TextView
                android:id="@+id/text_view_id"
                style="@style/TextDefault"
                tools:text="1" />

        </TableRow>

        <TableRow
            android:visibility="gone">

            <TextView
                style="@style/TextDefault"
                android:text="Name" />

            <TextView
                android:id="@+id/text_view_name"
                style="@style/TextDefault"
                tools:text="Belal Khan" />

        </TableRow>

        <TableRow
            android:visibility="gone">

            <TextView
                style="@style/TextDefault"
                android:text="Email" />

            <TextView
                android:id="@+id/text_view_Email"
                style="@style/TextDefault"
                tools:text="probelalkhan@gmail.com" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/button_posh"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanner_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Посмотреть историю посещение" />

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/button_send_qr"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_posh"
        android:layout_centerHorizontal="true"
        android:text="Статистика абонемента" />
    <Button
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/button_logout"
        style="@style/ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_send_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Logout" />
</RelativeLayout>